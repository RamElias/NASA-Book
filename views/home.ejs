<%- include('includes/pageTop.ejs') %>

<body>

<div class="row justify-content-center text-center mx-auto">
    <div class="col-sm-10 col-md-8 col-lg-8 col-xl-6">
        <div class="alert alert-primary" role="alert">
            <h1 class="alert-heading mb-2">NASA Picture of the day</h1>
            <p class="mb-1">Welcome <%= userName %> </p>
            <p class="mb-1">choose start date for display </p>
            <label for="date" class="d-none"></label>
            <input type="date" id="date" class="form-control mb-2 w-50 mx-auto"/>
            <button id="logOut" class="btn btn-primary"> Log Out</button>
        </div>
    </div>
</div>

<div class="row text-center mx-auto">
    <div id="loading-indicator">
        <img src="./images/loading.gif" alt="Loading...">
    </div>
</div>

<span id="ImagesFeed"> </span>

<div class="modal fade" id="test" data-bs-keyboard="true" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modal title</h5>
                <button type="button" id="modalClose" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-8 mb-3 mx-auto">
                            <img id="modalImg" class="img-fluid " src="" alt=""/>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <div class="col">
                                <div class="card bg-secondary border-secondary">
                                    <div class="card-body p-4">
                                        <!--- comment -->
                                        <span id="comment">
                                        </span>
                                        <!--- add comment -->
                                        <div class="form-outline">
                                            <form method="post" action="/date" id="sendComment">
                                                <input type="text" id="addComment" class="form-control mb-3"
                                                       placeholder="Type comment..."/>
                                                <label class="form-label d-done" for="addComment"></label>
                                                <input type="submit" class="btn btn-success" value="comment">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (includeScript) { %>
    <script src="javascripts/home.js"></script>
<% } %>


