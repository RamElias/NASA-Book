<%- include('includes/pageTop.ejs') %>

<body>
<script src="javascripts/registerValidator.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <br>
            <h3 class="text-center text-white mb-3">Welcome to the Universe <br> An Online Gallery of NASA Images</h3>
            <br>
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <form class="needs-validation" id="registerForm" action="/password" method="post">
                        <div class="text-danger text-center errormessage mb-3 <%= expired ? "" : "d-none" %>" id="isExpired">
                            Registration process expired, please start over :)
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control " id="email" name="email"
                                   value="<%= email %>" placeholder="name@example.com" required>
                        </div>

                        <div class="text-danger errormessage <%= usedEmail ? "" : "d-none" %>" >
                            Email is already in use, try another!
                        </div>
                        
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                   value="<%= firstName %>" placeholder="Jane" required>
                        </div>
                        <div class="text-danger errormessage d-none" id="InvalidfirstName">
                            Invalid first name use letters only
                        </div>

                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                   value="<%= lastName %>" placeholder="Doe" required>
                        </div>
                        <div class="text-danger errormessage d-none" id="InvalidlastName">
                            Invalid last name use letters only
                        </div>
                        <div class="text-danger errormessage">
                        </div>
                        <div class="text-center mb-2">
                            <button type="submit" class="btn btn-info w-50">Continue</button>
                        </div>
                    </form>

                    <div class="form-text-bold text-center">Already Registered?
                        <form action="/" method="get">
                            <button type="submit" class="btn btn-link">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/pageBottom.ejs') %>
